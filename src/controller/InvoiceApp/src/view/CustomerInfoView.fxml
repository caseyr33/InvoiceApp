   <children>
      <TextField fx:id="searchBox" layoutX="22.0" layoutY="26.0" prefHeight="25.0" prefWidth="272.0" />
      <Button fx:id="searchButton" layoutX="294.0" layoutY="26.0" mnemonicParsing="false" onAction="#searchCustomer" text="Search" />
      <Button fx:id="addNewCust" layoutX="496.0" layoutY="26.0" mnemonicParsing="false" onAction="#addCustomer" text="Add New" />
