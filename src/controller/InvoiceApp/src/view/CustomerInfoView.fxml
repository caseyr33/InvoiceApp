        <columns>
          <TableColumn fx:id="nameTable" prefWidth="143.0" text="Company Name" />
            <TableColumn fx:id="phoneTable" prefWidth="95.0" text="Phone" />
            <TableColumn fx:id="emailTable" prefWidth="104.0" text="Email" />
          <TableColumn fx:id="addressTable" prefWidth="149.0" text="Address" />
            <TableColumn fx:id="cityTable" prefWidth="150.0" text="City" />
            <TableColumn fx:id="stateTable" prefWidth="79.0" text="State" />
            <TableColumn fx:id="zipTable" prefWidth="114.0" text="ZIP" />
        </columns>
      </TableView>
      <Button fx:id="cancelCust" layoutX="420.0" layoutY="440.0" mnemonicParsing="false" onAction="#cancelCustomerView" prefHeight="25.0" prefWidth="66.0" text="Cancel" />
   </children>
</AnchorPane>
